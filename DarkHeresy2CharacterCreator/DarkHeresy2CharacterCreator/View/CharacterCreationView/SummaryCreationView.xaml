<Window x:Class="DarkHeresy2CharacterCreator.View.CharacterCreationView.SummaryCreationView"
        x:Name="SummaryCreationView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DarkHeresy2CharacterCreator.View.CharacterCreationView"
        mc:Ignorable="d"
        Title="Summary" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Res/HorizontalWindowBackground.jpg"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <WrapPanel x:Name="CharacterDiscriptionWP" Grid.Row="0" Margin="5">
            <TextBlock Text="Name: " Style="{DynamicResource BaseTextBlock}" FontSize="16"/>
            <TextBlock Text="{}"/><!--binding to character.characterName-->
        </WrapPanel>
        <Grid Grid.Row="1" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel x:Name="CharacteristicksAndAptitudesSP">
                <TextBlock Text="Characteristics:"/>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Horizontal" 
                                Grid.Column="0"
                                Grid.Row="0">
                        <TextBlock>
                            Weapon <LineBreak/> Skill (WS)
                        </TextBlock>
                        <TextBlock Text="0" Margin="5 0 5 0" VerticalAlignment="Center"/>
                        <TextBlock Text="0" VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" 
                                Grid.Column="0"
                                Grid.Row="1">
                        <TextBlock>
                            Ballistic <LineBreak/> Skill (BS)
                        </TextBlock>
                        <TextBlock Text="0" Margin="5 0 5 0" VerticalAlignment="Center"/>
                        <TextBlock Text="0" VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" 
                                Grid.Column="0"
                                Grid.Row="2">
                        <TextBlock Text="Strength (S)"/>
                        <TextBlock Text="0" Margin="5 0 5 0" VerticalAlignment="Center"/>
                        <TextBlock Text="0" VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" 
                                Grid.Column="0"
                                Grid.Row="3">
                        <TextBlock Text="Toughness (T)"/>
                        <TextBlock Text="0" Margin="5 0 5 0" VerticalAlignment="Center"/>
                        <TextBlock Text="0" VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" 
                                Grid.Column="0"
                                Grid.Row="4">
                        <TextBlock Text="Agility (AG)"/>
                        <TextBlock Text="0" Margin="5 0 5 0" VerticalAlignment="Center"/>
                        <TextBlock Text="0" VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" 
                                Grid.Column="1"
                                Grid.Row="0">
                        <TextBlock Text="Intelligence" VerticalAlignment="Center"/>
                        <TextBlock Text="0" Margin="5 0 5 0" VerticalAlignment="Center"/>
                        <TextBlock Text="0" VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" 
                                Grid.Column="1"
                                Grid.Row="1">
                        <TextBlock Text="Perception (PER)" VerticalAlignment="Center"/>
                        <TextBlock Text="0" Margin="5 0 5 0" VerticalAlignment="Center"/>
                        <TextBlock Text="0" VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" 
                                Grid.Column="1"
                                Grid.Row="2">
                        <TextBlock Text="Willpower (WP)"/>
                        <TextBlock Text="0" Margin="5 0 5 0" VerticalAlignment="Center"/>
                        <TextBlock Text="0" VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" 
                                Grid.Column="1"
                                Grid.Row="3">
                        <TextBlock Text="Fellowship (FEL)"/>
                        <TextBlock Text="0" Margin="5 0 5 0" VerticalAlignment="Center"/>
                        <TextBlock Text="0" VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" 
                                Grid.Column="1"
                                Grid.Row="4">
                        <TextBlock Text="Influence (IFL)"/>
                        <TextBlock Text="0" Margin="5 0 5 0" VerticalAlignment="Center"/>
                        <TextBlock Text="0" VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
                <StackPanel Orientation="Horizontal" Margin="5">
                    <TextBlock Text="Fate:"/>
                    <TextBlock Text="0" Margin="5 0"/>
                </StackPanel>
                <ListView x:Name="AptitudesLV"
                          ItemsSource="{Binding}">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical" />
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" FontSize="20" Margin="5"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
            <ListView x:Name="SkillsLV"
                      Grid.Column="1"
                      ItemsSource="{Binding}"
                      Margin="5">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical" />
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}" FontSize="20" Margin="5"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Grid Grid.Column="2" Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0">
                    <TextBlock Text="Talents and Traits:"/>
                    <ListView x:Name="TalentsTraitsLV"
                      ItemsSource="{Binding}">
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Vertical" />
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}" FontSize="20" Margin="5"/>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
                <StackPanel Grid.Row="1">
                    <TextBlock Text="Gear:"/>
                    <ListView x:Name="GearLV"
                      ItemsSource="{Binding}">
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Vertical" />
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}" FontSize="20" Margin="5"/>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
                <StackPanel Grid.Row="2">
                    <TextBlock Text="Special Abilities:"/>
                    <ListView x:Name="SpecialAbilitiesLV"
                      ItemsSource="{Binding}">
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Vertical" />
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}" VerticalAlignment="Center" FontSize="20" Margin="5"/>
                                    <TextBlock Text="{Binding Discription}" FontSize="20" Margin="5"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
