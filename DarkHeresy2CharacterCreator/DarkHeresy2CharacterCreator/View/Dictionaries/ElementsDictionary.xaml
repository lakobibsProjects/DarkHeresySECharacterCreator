<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:DarkHeresy2CharacterCreator.View.Dictionaries">
    <Style x:Key="BaseButton" TargetType="Button" >
        <Setter Property="FontFamily" Value="Res/FontGoticE"/>
        <Setter Property="FontStyle" Value="Oblique"/>
        <Setter Property="Foreground" Value="{DynamicResource ResourceKey=Dark}"/>
        <Setter Property="BorderBrush"  Value="{DynamicResource ResourceKey=Dark}"/>
        <Setter Property="BorderThickness" Value="10"/>
        <Setter Property="FontSize" Value="{DynamicResource ResourceKey=fontSizeLarge}"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="MinHeight" Value="35"/>
        <Setter Property="Background" Value="{DynamicResource ResourceKey=BronzeButtonBackground}"/>
    </Style>
    
    <Style x:Key="CharacterCreationButton" TargetType="Button" BasedOn="{DynamicResource ResourceKey=BaseButton}" >
        <Setter Property="FontSize" Value="{DynamicResource ResourceKey=fontSizeNormal}"/>
        <Setter Property="MinHeight" Value="5"/>        
    </Style>
    
    
    <Style x:Key="BaseTextBlock" TargetType="TextBlock">
        <Setter Property="TextAlignment" Value="Center"/>
    </Style>
</ResourceDictionary>